<h1>Burgers!</h1>

<h2>Available Burgers:</h2>


<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{else}}
      <li>
        {{burger_name}}
        <button class="change-devoured" data-id="{{id}}" data-newdevoured="true">
          {{#if devoured}}Yum!{{else}}Eat me!{{/if}}
        </button>
        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Devoured burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{burger_name}}
        <button class="change-devoured" data-id="{{id}}" data-newdevoured="false">
          {{#if devoured}}Yum!{{else}}Eat me!{{/if}}
        </button>
        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured yet?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>

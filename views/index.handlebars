<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">🍔 Burgers! 🍔</h1>
    <p class="lead">Add new burgers plus log it when you've tried one</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Burgers to try:</h2>
        <ul class="list-group">
          {{#each burgers}}
            {{#if devoured}}
            {{else}}
              <li class="list-group-item">
                {{burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-newdevoured="true">
                  {{#if devoured}}Yum!{{else}}Eat me!{{/if}}
                </button>
                <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>

    <div class="col">
      <h2>Devoured burgers:</h2>
        <ul class="list-group">
          {{#each burgers}}
            {{#if devoured}}
              <li class="list-group-item">
                {{burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-newdevoured="false">
                  {{#if devoured}}Yum!{{else}}Eat me!{{/if}}
                </button>
                <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>
<hr>

<div class="row add-row">
  <div class="col add-row">
      <h2 class="add-row">Add a Burger</h2>
  </div>
</div>
<div class="row" id="add">
  <div class="col"></div>
  <div class="col">
      <form class="create-form">
        <div class="form-group">
          <label id="title" for="ca">✏️ Burger Name:</label>
          <input type="text" id="ca" name="name">
          <button class="add-burger" id="submit" type="submit">Add Burger</button>
        </div>
  </div>
  <div class="col">
    <div class="form-group">
          <label id="title" for="devoured">😋 Devoured yet?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Not yet..
        </div>
      </form>
  </div>
  <div class="col"></div>
</div>
